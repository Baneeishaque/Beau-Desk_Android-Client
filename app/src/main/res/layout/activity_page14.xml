<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page14">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="256dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:text="              REGISTER"
        android:textColor="#040303"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/border14"
        android:ems="10"
        android:hint="    Name"
        android:inputType="textPersonName"
        android:textColor="#302B2B"
        android:textColorHint="#423E3E"
        app:layout_constraintBottom_toTopOf="@+id/editText4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/border14"
        android:ems="10"
        android:hint="    Email/Phone"
        android:inputType="textPersonName"
        android:textColor="#0B0A0A"
        android:textColorHint="#423E3E"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/border14"
        android:ems="10"
        android:hint="    Date Of Birth(DD/MM)"
        android:inputType="textPersonName"
        android:textColor="#423E3E"
        android:textColorHint="#423E3E"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/button14"
        android:text="SUBMIT"
        android:textColor="#FDFCFC"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>